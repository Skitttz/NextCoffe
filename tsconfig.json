{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
          "./src/*",
          
      ],      
      "@/lib/*": ["src/app/_components/lib/*"],
      "@/ui/*": ["src/app/_components/ui/*"],
      "@/assets/*":["./public/assets/*"],
  },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
  
}
